<%- include('../layouts/header.ejs') %>

<div class="container mt-4">
  <div class="d-flex justify-content-between">
    <a href="/admin/home" class="btn btn-info btn-sm active" role="button">Back</a>
    <a href="/admin/adduser" class="btn btn-warning btn-sm active" role="button">
      <i class="bi bi-person-fill-add"></i> Add user
    </a>
    <a href="/admin/logout" class="btn btn-danger btn-sm active" role="button">Logout</a>
  </div>
  <h2 class="text-center mt-4">Users Directory</h2>

  <div class="container mt-4 text-center">
    <form method="POST" action="/admin/search">
      <div class="d-flex justify-content-start mb-3">
        <input type="text" id="search" name="search" class="form-control  form-control-sm w-25" placeholder="Search Users">
        <% if(typeof all !== 'undefined'){%>
          <a href="/admin/dashboard" class="btn btn-warning  btn-sm active" role="button">show all</a>
        <%

        }  %>
        
      </div>
    </form>
    
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email ID</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if(users.length > 0) { %>
          <% users.forEach((user) => { %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <a href="/admin/edituser?id=<%= user._id %>" class="btn btn-primary btn-sm">Edit</a>
              <a href="/admin/deleteuser?id=<%= user._id %>" class="btn btn-danger btn-sm">Delete</a>
            </td>
          </tr>
          <% }) %>
        <% } else { %>
        <tr>
          <td colspan="3" class="text-center">No user found</td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../layouts/footer.ejs') %>

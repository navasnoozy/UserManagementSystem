<%- include('../layouts/header.ejs') %>

<section class="vh-100" style="background-color: #eee">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">
                  Sign In
                </p>

                <form action="/login" method="POST" class="mx-1 mx-md-4">
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div
                      data-mdb-input-init
                      class="form-outline flex-fill mb-0"
                    >
                      <input
                        type="email"
                        name="email"
                        placeholder="Enter your Email id"
                  
                        id="form3Example3c"
                        class="form-control"
                      />
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div
                      data-mdb-input-init
                      class="form-outline flex-fill mb-0"
                    >
                      <input
                        type="password"
                        name="password"
                        placeholder="Enter your password"
                   
                        id="form3Example4c"
                        class="form-control"
                      />
                    </div>
                  </div>

                  <div class="d-flex justify-content-center mx-4 mb-4 mb-lg-4">
                    <button
                      type="submit"
                      data-mdb-button-init
                      data-mdb-ripple-init
                      class="btn btn-success btn-lg"
                    >
                      Login
                    </button>
                  </div>

                  <% if (typeof message !== 'undefined'){ %>
                  <p style="color: rgb(128, 0, 0)" class="text-center">
                    <%= message %>
                  </p>
                  <% } %>
                </form>

                <div class="d-flex justify-content-center mx-2 mb-3 mb-lg-4">
                  <p class="text-center  fw-bold mb-1 mx-1 mx-md-4 mt-2">
                    Don't have an account? <a href="/register" class="text-decoration-none text-primary"
                    > Sign up here</a
                  >
                  </p>
                </div>
                <div class="d-flex justify-content-center mx-2 mb-1 mb-lg-4">
                  <p class="text-center  fw-bold  mx-md-4">
                    <a href="/admin" class="text-decoration-none text-dark"
                    > Admin login</a
                  >
                  </p>
                </div>
              </div>
              <div
                class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2"
              >
                <img
                  src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid"
                  alt="Sample image"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('../layouts/footer.ejs') %>
